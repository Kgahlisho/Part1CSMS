@model List<Part1ex.Models.Calculations>



    <a class="btn btn-primary" href="@Url.Action("CoordinatorDashboard","Home")"> Back to Dashboard</a>

<div class="container">


<br />
	<h2 class="dashboard-heading">Submitted claims :</H2>


@if (!Model.Any())
{
	<div class="alert alert-info">No claims submitted yet.</div>

}
else
{
	<table >
		<thead>
		<tr>
			<th>Lecturer name :</th>
			<th>Hours Worked :</th>
			<th>Hourly Rate :</th>
			<th>Total Amount :</th>
			<th>Documents :</th>
			<th>Claim date :</th>
			<th>Claim Status :</th>
			<th>Actions :</th>
			<th>Status :</th>
		</tr>
		</thead>
		<tbody>
		@for (int i = 0; i < Model.Count; i++)//to know each claims status in the index only the ones that show pending will show the approve and reject buttons

		{
			var claim = Model[i];
			<tr>
				<td>@claim.Lecturer</td>
				<td>@claim.HoursWorked</td>
				<td>@claim.HourlyRate</td>
				<td>@claim.TotalAmount</td>
				<td>@claim.DocumentsUploaded</td>
				<td>@claim.ClaimDate</td>
				<td>@claim.ClaimStatus</td>
				<td>
					<span class="badge @(claim.ClaimStatus.ToLower())">@claim.ClaimStatus</span>	</td>
					<td>
					@if (claim.ClaimStatus == "Pending")
					{
						<a class="btn btn-success btn-sm" href="@Url.Action("ApproveClaim" , "Home", new {index = i})">Verify</a>
						<br />
						<a class="btn btn-danger btn-sm" href="@Url.Action("RejectClaim" , "Home", new {index = i})">Deny</a>
					}
					else
					{
						<span>Checked</span>
					}
				</td>


			</tr>
		}
		</tbody>



	</table>
	@if (TempData["Message"] != null)
    {
        <p style="color:green">@TempData["Message"]</p>
    }
}
</div>